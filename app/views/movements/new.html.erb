<% @rPath = categories_path %>


<%= form_with model: @movement, url: movements_path, method: :post do |form| %>
  <div>
    <%= form.text_field :name, placeholder: "Reference Name" %>
  </div>
  <div class="form">
    $<%= form.text_field :amount %>
  </div>
  <div>
    <%= form.label :categories %><br />
    <% @categories.each do |category| %>
      <%= form.check_box :categories, { multiple: true }, category.id, nil %>
      <%= category.name %><br />
    <% end %>
  </div>
  <div class="greenBtn">
    <%= form.submit "Save", class: 'newBtn' %>
  </div>
<% end %>
