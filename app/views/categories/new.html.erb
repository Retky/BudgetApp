<% @rPath = categories_path %>

<%= form_with model: @category, url: categories_path, method: :post do |form| %>
  <%= form.text_field :icon, placeholder: 'Icon URL' %><br />
  <%= form.text_field :name, placeholder: 'Category Name' %><br />
  <div class="greenBtn">
    <%= form.submit "Save", class: 'newBtn' %>
  </div>
<% end %>
