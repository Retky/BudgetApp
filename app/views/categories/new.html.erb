<% @rPath = categories_path %>

<%= form_with model: @category, url: categories_path, method: :post, class: 'movForm' do |form| %>
  <div class="newFile">
    <%= form.text_field :icon, placeholder: 'Icon URL', required: true %>
  </div>
  <div class="newFile">
    <%= form.text_field :name, placeholder: 'Category Name', required: true %><br />
  </div>
  <div class="greenBtn">
    <%= form.submit "Save", class: 'newBtn' %>
  </div>
<% end %>
